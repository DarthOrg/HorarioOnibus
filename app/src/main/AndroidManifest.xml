<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="darthorg.com.horarioonibus">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/ThemeSplash">
        <activity android:name=".view.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".view.HorarioOnibus"
            android:label="@string/title_activity_horario_onibus"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".view.Favoritos"
            android:label="@string/txt_favoritos"
            android:theme="@style/ThemeFavoritos">
        </activity>

        <activity
            android:name=".view.LinhasHorarios"
            android:label="@string/txtNomeLinhas"
            android:theme="@style/AppThemeTabLayout">


        </activity>

        <activity
            android:name=".view.Etinerarios"
            android:label="@string/txt_etinerario"
            android:theme="@style/AppThemeTabLayout">
        </activity>
    </application>

</manifest>
