<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhiteBackground</item>
        <item name="colorPrimaryDark">@color/colorWhiteDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorWhiteBackground</item>
        <item name="android:textColorPrimary">@color/colorWhiteDark</item>
        <item name="android:textColorSecondary">@color/colorWhiteDark</item>
    </style>

    <style name="ThemeSplash" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="ThemeSplash.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ThemeSplash.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeFavoritos" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@color/colorWhiteBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorWhiteBackground</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

</resources>
